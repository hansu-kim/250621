import streamlit as st
import yfinance as yf
import plotly.graph_objs as go
from datetime import datetime, timedelta

st.set_page_config(layout="wide")
st.title("ğŸŒ ê¸€ë¡œë²Œ ì‹œê°€ì´ì•¡ TOP 10 ê¸°ì—… - ìµœê·¼ 1ë…„ ì£¼ê°€ ë³€í™”")

# ì‹œê°€ì´ì•¡ Top 10 (2024~2025 ê¸°ì¤€, ì¶”ì •)
top10_stocks = {
    "Apple (AAPL)": "AAPL",
    "Microsoft (MSFT)": "MSFT",
    "Saudi Aramco (2222.SR)": "2222.SR",  # ì‚¬ìš°ë”” ì¦ê¶Œê±°ë˜ì†Œ
    "Alphabet (GOOGL)": "GOOGL",
    "Amazon (AMZN)": "AMZN",
    "Nvidia (NVDA)": "NVDA",
    "Meta Platforms (META)": "META",
    "Berkshire Hathaway (BRK-B)": "BRK-B",
    "TSMC (TSM)": "TSM",
    "Tesla (TSLA)": "TSLA",
}

# ë‚ ì§œ ì„¤ì • (ìµœê·¼ 1ë…„)
end_date = datetime.today()
start_date = end_date - timedelta(days=365)

# ë°ì´í„° ìˆ˜ì§‘
@st.cache_data
def fetch_data(tickers):
    data = {}
    for name, symbol in tickers.items():
        df = yf.download(symbol, start=start_date, end=end_date)
        data[name] = df['Close']
    return data

with st.spinner("ğŸ“¡ ë°ì´í„°ë¥¼ ê°€ì ¸ì˜¤ëŠ” ì¤‘ì…ë‹ˆë‹¤..."):
    price_data = fetch_data(top10_stocks)

# Plotly ê·¸ë˜í”„ ë§Œë“¤ê¸°
fig = go.Figure()
for name, prices in price_data.items():
    fig.add_trace(go.Scatter(x=prices.index, y=prices.values, mode='lines', name=name))

fig.update_layout(
    title="Top 10 ì‹œê°€ì´ì•¡ ê¸°ì—…ì˜ ìµœê·¼ 1ë…„ ì£¼ê°€ ë³€í™”",
    xaxis_title="ë‚ ì§œ",
    yaxis_title="ì£¼ê°€ (USD ë˜ëŠ” í˜„ì§€í†µí™”)",
    template="plotly_white",
    height=600,
    legend=dict(orientation="h", y=-0.2),
)

st.plotly_chart(fig, use_container_width=True)
