import streamlit as st
import yfinance as yf
import plotly.graph_objs as go
from datetime import datetime, timedelta

st.set_page_config(layout="wide")
st.title("🌍 글로벌 시가총액 TOP 10 기업 - 최근 1년 주가 변화")

# 시가총액 Top 10 (2024~2025 기준, 추정)
top10_stocks = {
    "Apple (AAPL)": "AAPL",
    "Microsoft (MSFT)": "MSFT",
    "Saudi Aramco (2222.SR)": "2222.SR",  # 사우디 증권거래소
    "Alphabet (GOOGL)": "GOOGL",
    "Amazon (AMZN)": "AMZN",
    "Nvidia (NVDA)": "NVDA",
    "Meta Platforms (META)": "META",
    "Berkshire Hathaway (BRK-B)": "BRK-B",
    "TSMC (TSM)": "TSM",
    "Tesla (TSLA)": "TSLA",
}

# 날짜 설정 (최근 1년)
end_date = datetime.today()
start_date = end_date - timedelta(days=365)

# 데이터 수집
@st.cache_data
def fetch_data(tickers):
    data = {}
    for name, symbol in tickers.items():
        df = yf.download(symbol, start=start_date, end=end_date)
        data[name] = df['Close']
    return data

with st.spinner("📡 데이터를 가져오는 중입니다..."):
    price_data = fetch_data(top10_stocks)

# Plotly 그래프 만들기
fig = go.Figure()
for name, prices in price_data.items():
    fig.add_trace(go.Scatter(x=prices.index, y=prices.values, mode='lines', name=name))

fig.update_layout(
    title="Top 10 시가총액 기업의 최근 1년 주가 변화",
    xaxis_title="날짜",
    yaxis_title="주가 (USD 또는 현지통화)",
    template="plotly_white",
    height=600,
    legend=dict(orientation="h", y=-0.2),
)

st.plotly_chart(fig, use_container_width=True)
